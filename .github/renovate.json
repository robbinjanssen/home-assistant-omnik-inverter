{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "before 6am every weekday"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "commitMessagePrefix": "⬆️",
  "packageRules": [
    {
      "matchManagers": [
        "poetry"
      ],
      "addLabels": [
        "python"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github_actions"
      ],
      "rangeStrategy": "pin",
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
